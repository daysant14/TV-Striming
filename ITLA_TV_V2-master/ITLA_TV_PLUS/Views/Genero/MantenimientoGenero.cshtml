@model Application.ViewModels.SaveGeneroViewModel;
@{
    bool edit = Model.GeneroId == 0 ? false : true;
    ViewData["Title"] = "Registrar nuevo genero";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-gradient text-ligth-50">
                    <h3>@(edit ? $"Editando el genero: {Model.GeneroName}." : "Registrando un nuevo genero.")</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Genero" asp-action="@(edit ? "Edit" : "Create")">
                        <div class="mb-3">
                            <label asp-for="GeneroName" class="form-label">Nombre: </label>
                            <input type="text" asp-for="GeneroName" class="form-control" required/>
                            <span asp-validation-for="GeneroName" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="GeneroId"/>

                        <button type="submit" class="btn btn-dark">Guardar</button>
                        <a asp-controller="Genero" asp-action="Index" class="btn btn-danger">Regresar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


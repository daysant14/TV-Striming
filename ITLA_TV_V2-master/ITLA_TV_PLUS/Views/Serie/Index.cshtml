@model List<Application.ViewModels.SerieViewModel>
@{
    ViewData["Title"] = "Mantenimiento de Series";
}

<div class="container-fluid mb-4">
    <div class="row">
        <div class="col-3 offset-9">
            <a asp-controller="Serie" asp-action="Create" class="btn btn-outline-light bg-primary bg-gradient">Registrar nueva serie</a>
        </div>
    </div>
</div>

<div class="row">
    @if (Model == null || Model.Count == 0)
    {
        <h1 class="text-white">En este momento no tenemos series disponibles.</h1>
    }
    else
    {
        @foreach (Application.ViewModels.SerieViewModel serie in Model)
        {
            <div class="col-4 mb-3">
                <div class="card shadow-sm">
                    <img class="bd-placeholder-img card-img-top img-size" src="@serie.ImagePath" action="@serie.VideoPath" />
                    <div class="card-body">
                        <div class="card mb-3">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Nombre: @serie.SerieName</li>
                                <li class="list-group-item">
                                    Generos: @serie.GeneroPrimarioName, @serie.GeneroSecundarioName
                                </li>
                                <li class="list-group-item">
                                    Productora: @serie.ProductoraName
                                </li>

                                <li class="list-group-item">
                                    Actores: @serie.Actores
                                 </li>
                                <li class="list-group-item">
                                  Directo: @serie.Director
                                </li>
                                <li class="list-group-item">
                                 Año: @serie.Año
                                </li>


                            </ul>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a class="btn btn-sm btn-warning m-md-1 fw-bolder" asp-controller="Serie" asp-action="Edit" asp-route-id="@serie.SerieId">Editar</a>
                                <a class="btn btn-sm btn-danger m-md-1 fw-bolder" asp-controller="Serie" asp-action="Delete" asp-route-id="@serie.SerieId">Borrar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
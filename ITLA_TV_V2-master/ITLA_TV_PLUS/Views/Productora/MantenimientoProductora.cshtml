@model Application.ViewModels.SaveProductoraViewModel;
@{
    bool edit = Model.ProductoraId == 0 ? false : true;
    ViewData["Title"] = "Registrar nueva productora";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-gradient text-ligth-50">
                    <h3>@(edit ? $"Editando la productora: {Model.ProductoraName}." : "Registrando una nueva productora.")</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Productora" asp-action="@(edit ? "Edit" : "Create")">
                        <div class="mb-3">
                            <label asp-for="ProductoraName" class="form-label">Nombre: </label>
                            <input type="text" asp-for="ProductoraName" class="form-control" required />
                            <span asp-validation-for="ProductoraName" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="ProductoraId" />

                        <button type="submit" class="btn btn-dark">Guardar</button>
                        <a asp-controller="Productora" asp-action="Index" class="btn btn-danger">Regresar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@model Application.ViewModels.SaveSerieViewModel;
@{
    ViewData["Title"] = "Detalles Serie";
}

<div class="row">
    <div class="col-6 offset-3 text-center">
        <div class="card body">
            <div class="card-title text-center text-ligth-50 m-2">
                <h3>@Model.SerieName</h3>
            </div>
            <div class="ratio ratio-16x9">
                <iframe width="560" height="315" src="@Model.VideoPath" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
            </div>
            <div class="m-3">
                <p class="fw-bolder">@Model.Descripcion</p>
            </div>
            <div class="justify-content-center">
                <div class="btn-group m-2 w-50">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Regresar</a>
                    <input type="hidden" asp-for="SerieId" name="id" />
                </div>
            </div>
        </div>
    </div>
</div>


